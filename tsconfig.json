{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* âœ… Type checking - adjusted for build success */
    "strict": true,
    "noUnusedLocals": false, // changed to false (fixes unused variable build errors)
    "noUnusedParameters": false, // changed to false (fixes unused parameter errors)
    "noFallthroughCasesInSwitch": true,
    "types": ["node"], // added (fixes NodeJS namespace errors)

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
